{
  "name": "@logux/client",
  "version": "0.17.0",
  "description": "Logux base components to build web client",
  "keywords": [
    "logux",
    "client",
    "websocket",
    "cross-tab",
    "indexeddb"
  ],
  "scripts": {
    "clean": "rm -Rf coverage/ test/demo/dist/",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage && eslint . && pnpm clean && check-dts && size-limit && pnpm build",
    "build": "vite build test/demo/ -m production --base /client/",
    "start": "vite test/demo/ --open"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "homepage": "https://logux.io/",
  "repository": "logux/client",
  "sideEffects": false,
  "type": "module",
  "types": "./index.d.ts",
  "exports": {
    ".": "./index.js",
    "./vue": "./vue/index.js",
    "./react": "./react/index.js",
    "./preact": "./preact/index.js",
    "./package.json": "./package.json",
    "./badge/styles": "./badge/styles/index.js"
  },
  "engines": {
    "node": "^14.0.0 || ^16.0.0 || >=18.0.0"
  },
  "peerDependencies": {
    "@logux/core": "^0.7.0",
    "@nanostores/preact": ">=0.0.0",
    "@nanostores/react": ">=0.0.0",
    "@nanostores/vue": ">=0.0.0",
    "nanostores": "^0.6.0",
    "preact": ">=10.0.0",
    "react": ">=18.0.0",
    "react-dom": ">=16.8.0",
    "vue": ">=3.2.30"
  },
  "peerDependenciesMeta": {
    "@nanostores/preact": {
      "optional": true
    },
    "@nanostores/react": {
      "optional": true
    },
    "@nanostores/vue": {
      "optional": true
    },
    "preact": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    },
    "vue": {
      "optional": true
    }
  },
  "dependencies": {
    "@logux/actions": "^0.2.3",
    "fast-json-stable-stringify": "^2.1.0",
    "nanodelay": "^2.0.2",
    "nanoevents": "^7.0.1",
    "nanoid": "^4.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.9",
    "@jest/globals": "^27.5.1",
    "@logux/core": "^0.7.3",
    "@logux/eslint-config": "^47.2.0",
    "@nanostores/preact": "^0.2.0",
    "@nanostores/react": "^0.3.0",
    "@nanostores/vue": "^0.5.5",
    "@peculiar/webcrypto": "^1.4.0",
    "@size-limit/preset-small-lib": "^8.0.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/preact": "^3.2.2",
    "@testing-library/react": "^13.3.0",
    "@testing-library/vue": "^6.6.1",
    "@types/jest": "^27.5.2",
    "@types/node": "^18.6.2",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vue/compiler-sfc": "^3.2.37",
    "check-dts": "^0.6.7",
    "clean-publish": "^4.0.1",
    "eslint": "^8.20.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.4",
    "eslint-plugin-prefer-let": "^3.0.1",
    "eslint-plugin-promise": "^6.0.0",
    "fake-indexeddb": "^4.0.0",
    "jest": "^27.5.1",
    "nanostores": "^0.6.0",
    "picocolors": "^1.0.0",
    "postcss": "^8.4.14",
    "preact": "^10.10.0",
    "print-snapshots": "^0.4.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "size-limit": "^8.0.0",
    "svgo": "^2.8.0",
    "ts-jest": "^27.1.5",
    "typescript": "^4.7.4",
    "vite": "^3.0.4",
    "vue": "^3.2.37"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "jsdom",
    "globals": {
      "ts-jest": {
        "useESM": true,
        "isolatedModules": true
      }
    },
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    },
    "moduleNameMapper": {
      ".*\\.svg$": "<rootDir>/test/image.js"
    }
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/esm",
    "rules": {
      "@typescript-eslint/no-explicit-any": "off",
      "symbol-description": "off",
      "no-console": "off",
      "camelcase": "off"
    },
    "overrides": [
      {
        "files": "*.test.*",
        "globals": {
          "it": "readonly",
          "expect": "readonly"
        }
      },
      {
        "files": "indexed-store/index.test.ts",
        "rules": {
          "import/order": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "test/demo/dist",
    "**/errors.ts"
  ],
  "size-limit": [
    {
      "name": "CrossTabClient",
      "path": "./cross-tab-client/index.js",
      "import": "{ CrossTabClient }",
      "limit": "4 KB"
    },
    {
      "name": "Helpers",
      "import": {
        "./index.js": "{ attention, confirm, favicon, status, log, badge, badgeEn }"
      },
      "limit": "3 KB"
    },
    {
      "name": "React",
      "import": {
        "./index.js": "{ CrossTabClient, syncMapTemplate, changeSyncMap }",
        "./react/index.js": "{ ClientContext, useSync, ChannelErrors, useFilter, useAuth }"
      },
      "limit": "7 KB"
    },
    {
      "name": "Vue",
      "import": {
        "./index.js": "{ CrossTabClient, syncMapTemplate, changeSyncMap }",
        "./vue/index.js": "{ loguxPlugin, useSync, ChannelErrors, useFilter, useAuth }"
      },
      "limit": "7 KB"
    }
  ]
}
