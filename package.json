{
  "name": "@logux/client",
  "version": "0.20.1",
  "description": "Logux base components to build web client",
  "keywords": [
    "logux",
    "client",
    "websocket",
    "cross-tab",
    "indexeddb"
  ],
  "scripts": {
    "clean": "rm -Rf coverage/ test/demo/dist/",
    "test:lint": "eslint .",
    "test:size": "size-limit",
    "test:types": "check-dts",
    "test:build": "pnpm build",
    "test": "vitest run --coverage && pnpm run /^test:/",
    "build": "vite build test/demo/ -m production --base /client/",
    "start": "vite test/demo/ --open"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "homepage": "https://logux.org/",
  "repository": "logux/client",
  "sideEffects": false,
  "type": "module",
  "types": "./index.d.ts",
  "exports": {
    ".": "./index.js",
    "./vue": "./vue/index.js",
    "./react": "./react/index.js",
    "./preact": "./preact/index.js",
    "./package.json": "./package.json",
    "./badge/styles": "./badge/styles/index.js"
  },
  "engines": {
    "node": "^18.0.0 || >=20.0.0"
  },
  "peerDependencies": {
    "@logux/core": "^0.8.0",
    "@nanostores/preact": ">=0.0.0",
    "@nanostores/react": ">=0.0.0",
    "@nanostores/vue": ">=0.0.0",
    "nanostores": "^0.9.0 || ^0.10.0",
    "preact": ">=10.0.0",
    "react": ">=18.0.0",
    "react-dom": ">=16.8.0",
    "vue": ">=3.3.2"
  },
  "peerDependenciesMeta": {
    "@nanostores/preact": {
      "optional": true
    },
    "@nanostores/react": {
      "optional": true
    },
    "@nanostores/vue": {
      "optional": true
    },
    "preact": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    },
    "vue": {
      "optional": true
    }
  },
  "dependencies": {
    "@logux/actions": "^0.3.1",
    "fast-json-stable-stringify": "^2.1.0",
    "nanodelay": "^2.0.2",
    "nanoevents": "^9.0.0",
    "nanoid": "^5.0.7"
  },
  "devDependencies": {
    "@logux/core": "github:logux/core#next",
    "@logux/eslint-config": "^53.2.0",
    "@nanostores/preact": "^0.5.1",
    "@nanostores/react": "^0.7.2",
    "@nanostores/vue": "^0.10.0",
    "@peculiar/webcrypto": "^1.4.6",
    "@size-limit/preset-small-lib": "^11.1.4",
    "@testing-library/preact": "^3.2.3",
    "@testing-library/react": "^15.0.7",
    "@testing-library/vue": "^8.0.3",
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "@types/ws": "^8.5.10",
    "@vitest/coverage-v8": "^1.6.0",
    "@vue/compiler-sfc": "^3.4.27",
    "check-dts": "^0.7.2",
    "clean-publish": "^4.4.0",
    "eslint": "^9.2.0",
    "fake-indexeddb": "^5.0.2",
    "globals": "^15.2.0",
    "happy-dom": "^14.11.0",
    "nanospy": "^1.0.0",
    "nanostores": "^0.10.3",
    "picocolors": "^1.0.1",
    "postcss": "^8.4.38",
    "preact": "10.22.0",
    "print-snapshots": "^0.4.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "size-limit": "^11.1.4",
    "svgo": "^3.3.2",
    "typescript": "^5.4.5",
    "vite": "^5.2.11",
    "vitest": "^1.6.0",
    "vue": "^3.4.27"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "size-limit": [
    {
      "name": "CrossTabClient",
      "path": "./cross-tab-client/index.js",
      "import": "{ CrossTabClient }",
      "limit": "4 KB"
    },
    {
      "name": "Helpers",
      "import": {
        "./index.js": "{ attention, confirm, favicon, status, log, badge, badgeEn }"
      },
      "limit": "3 KB"
    },
    {
      "name": "React",
      "import": {
        "./index.js": "{ CrossTabClient, syncMapTemplate, changeSyncMap }",
        "./react/index.js": "{ ClientContext, useSync, ChannelErrors, useFilter, useAuth }"
      },
      "limit": "7 KB"
    },
    {
      "name": "Vue",
      "import": {
        "./index.js": "{ CrossTabClient, syncMapTemplate, changeSyncMap }",
        "./vue/index.js": "{ loguxPlugin, useSync, ChannelErrors, useFilter, useAuth }"
      },
      "limit": "7 KB"
    }
  ]
}
